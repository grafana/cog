{{- define "options" }}
{{- $builder := .Builder }}
{{ range $builder.Options }}
{{- $option := . }}
def {{ .Name|formatIdentifier }}(self{{- template "args" .Args }}) -> typing.Self:
    {{- include "comments" . | indent 4 }}
    {{- range .Assignments }}
    {{- include "assignment" (dict "Assignment" . "Builder" $builder "Option" $option) | indent 4 }}
    {{- end }}

    return self
{{ end }}
{{- end -}}
