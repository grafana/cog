{{- define "constraints" }}
{{- range . }}
{{- $leftOperand := .ArgName|formatArg }}
{{- $operator := .Op }}
{{- if eq .Op "minLength" }}
    {{- $leftOperand = print "len(" $leftOperand ")" }}
    {{- $operator = ">=" }}
{{- end }}
{{- if eq .Op "maxLength" }}
    {{- $leftOperand = print "len(" $leftOperand ")" }}
    {{- $operator = "<=" }}
{{- end }}
if not {{ $leftOperand }} {{ $operator }} {{ .Parameter }}:
    raise ValueError("{{ $leftOperand }} must be {{ $operator }} {{ .Parameter }}")
{{- end }}
{{- end }}
