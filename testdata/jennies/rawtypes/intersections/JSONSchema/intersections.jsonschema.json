{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Intersections",
  "definitions": {
    "Intersections": {
      "allOf": [
        {
          "$ref": "#/definitions/SomeStruct"
        },
        {
          "$ref": "#/definitions/AnotherStruct"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "fieldString"
          ],
          "properties": {
            "fieldString": {
              "type": "string",
              "default": "hello"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "fieldInteger"
          ],
          "properties": {
            "fieldInteger": {
              "type": "integer",
              "default": 32
            }
          }
        }
      ]
    },
    "SomeStruct": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "fieldBool"
      ],
      "properties": {
        "fieldBool": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "Common": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "type",
        "contains"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "The metric name"
        },
        "type": {
          "enum": [
            "counter",
            "gauge"
          ],
          "type": "string",
          "description": "The metric type"
        },
        "contains": {
          "enum": [
            "default",
            "time"
          ],
          "type": "string",
          "description": "The type of data the metric contains"
        }
      },
      "description": "Base properties for all metrics"
    },
    "Counter": {
      "allOf": [
        {
          "$ref": "#/definitions/Common"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "values"
          ],
          "properties": {
            "type": {
              "type": "string",
              "const": "counter"
            },
            "values": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "count"
              ],
              "properties": {
                "count": {
                  "type": "number",
                  "minimum": 0,
                  "description": "Total count of events"
                }
              },
              "description": "Counter metric values"
            }
          }
        }
      ],
      "description": "Counter metric combining common properties with specific values"
    }
  }
}