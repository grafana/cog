{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "SomeStruct": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "fieldBool",
        "fieldString",
        "FieldStringWithConstantValue",
        "FieldFloat32",
        "FieldInt32"
      ],
      "properties": {
        "fieldBool": {
          "type": "boolean",
          "default": true
        },
        "fieldString": {
          "type": "string",
          "default": "foo"
        },
        "FieldStringWithConstantValue": {
          "type": "string",
          "const": "auto"
        },
        "FieldFloat32": {
          "type": "number",
          "default": 42.42
        },
        "FieldInt32": {
          "type": "integer",
          "default": 42
        }
      }
    }
  }
}